<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chorewards">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_checklist"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_checklist_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HappyChores">
        <activity
            android:name="com.example.chorewards.activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.chorewards.activities.RewardsActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
    </application>

</manifest>